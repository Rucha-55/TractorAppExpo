    // Map from step1 option text to specific dynamic step
    const step1ToDynamicStepMap = {
      "üò° Frustration with manager or leadership decisions": "step3_frustration_with_manager_or_leadership_decisions",
      "üò§ Tension or conflict with colleagues": "step3_tension_or_conflict_with_colleagues",
